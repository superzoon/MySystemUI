<resources>
    <declare-styleable name="FingerView">
        <attr name="normalDrawable" format="color|reference"/>
        <attr name="pressDrawable" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="SlideView">
        <attr name="center_y" format="dimension"/>
        <attr name="title_y_min" format="dimension"/>
        <attr name="title_y_max" format="dimension"/>
        <attr name="title_size" format="dimension"/>
        <attr name="title_size_scale" format="float"/>
        <attr name="icon_size" format="dimension"/>
        <attr name="icon_size_scale" format="float"/>
        <attr name="icon_margin" format="dimension"/>
        <attr name="alpha_min" format="float"/>
        <attr name="alpha_max" format="float"/>
        <attr name="trigger_slide_space" format="dimension"/>
        <attr name="trigger_cancel_space" format="dimension"/>
    </declare-styleable>
</resources>
